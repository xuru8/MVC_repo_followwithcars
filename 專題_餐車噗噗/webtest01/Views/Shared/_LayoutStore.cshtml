<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>餐車噗噗 - 攤販即時動態搜尋平台</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/Content/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Scripts/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Scripts/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Content/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @RenderSection("css", required: false)
</head>

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <div class="container-fluid nav-bar bg-transparent">
            <nav class="navbar navbar-expand-lg bg-white navbar-light py-0 px-4">
                <a href="@Url.Action("Index","Home")" class="navbar-brand d-flex align-items-center text-center">
                    <div class="icon p-2 me-2">
                        <img class="img-fluid" src="~/Content/imgs/logo.png" alt="Icon" style="width: 100px; height: 100px;">
                    </div>
                    <h1 class="m-0 text-primary">餐車噗噗</h1>
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto">
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">關於我們</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a class="dropdown-item">@Html.ActionLink("發展動機", "About", "Home", null, null, "motivation", null, new { @class = "dropdown-item" })</a>
                                <a class="dropdown-item">@Html.ActionLink("餐車文化", "About", "Home", null, null, "culture", null, new { @class = "dropdown-item" })</a>
                            </div>
                        </div>

                        <div class="nav-item dropdown">
                            @Html.ActionLink("市集資訊", "MarketInfo", "Home", null, null, "motivation", null, new { @class = "nav-link" })
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-user-circle-o fa-2x" aria-hidden="true"></i></a>
                        <div class="dropdown-menu rounded-0 m-0">
                            @Html.ActionLink("餐車資訊管理", "EditCarInfo", "Store", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("菜單管理", "Product_Store", "Product", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("商家基本資料", "EditStoreBoss", "Store", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("客戶評論", "showComment", "Store", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("登出", "AllSignOut", "SignOut", null, new { @class = "dropdown-item" })
                        </div>
                    </div>

                </div>
            </nav>
        </div>

        <!-- Navbar End -->
        <!-- Header Start -->
        @RenderBody()
        <!-- Footer Start -->
        <div class="container-fluid bg-primary text-white-50 footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-4 col-md-6">
                        <h5 class="mb-4">聯絡我們</h5>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>701台南市東區大學路1號</p>
                        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>06-2757575#51212</p>
                        <p class="mb-2"><i class="fa fa-envelope me-3"></i>bubu@gmail.com</p>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <h5 class="mb-4">快速連結</h5>
                        <a class="btn btn-link" href="">關於我們</a>
                        <a class="btn btn-link" href="">服務條款</a>
                        <a class="btn btn-link" href="">隱私條款</a>
                        <a class="btn btn-link" href="">加入合作夥伴</a>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <h5 class="mb-4">社群連結</h5>
                        <div class="d-flex pt-2">
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy; <a class="border-bottom" href="#">Your Site Name</a>, All Right Reserved.

                            <!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
                            Designed By <a class="border-bottom" href="https://htmlcodex.com">HTML Codex</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.10/dist/vue.js"></script>
    <script src="~/Scripts/lib/wow/wow.min.js"></script>
    <script src="~/Scripts/lib/easing/easing.min.js"></script>
    <script src="~/Scripts/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Scripts/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>