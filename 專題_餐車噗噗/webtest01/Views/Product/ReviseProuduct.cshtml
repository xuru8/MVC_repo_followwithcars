@using webtest01.Models
@model IQueryable<webtest01.Models.Store_Products>

@{
    ViewBag.Title = "ReviseProuduct";
    Layout = "~/Views/Shared/_LayoutStore.cshtml";
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-12">
                <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h1 class="mb-3">菜單品項修改</h1>
                </div>
                <div>
                    @using (Html.BeginForm("ReviseProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.Hidden("id", Model.FirstOrDefault().ProductID)
                        <div class="uploads">
                            <label for="" class="form-label">產品名稱：</label>
                            <input type="text" class="form-control" id="Product_name" name="Product_name" value="@Model.FirstOrDefault().Product_Name" />
                        </div>
                        <div class="uploads">
                            <label for="" class="form-label">產品價格：</label>
                            <input type="text" class="form-control" id="Product_price" name="Product_price" onkeyup="value=value.replace(/^(0+)|[^\d]+/g,'')" value="@Model.FirstOrDefault().Product_Price " />
                        </div>
                        <div>
                            <img src="@Model.FirstOrDefault().Product_Picture" alt="圖片" width="200px" height="150px" class="menuPhoto1" id="menuPhoto" />
                        </div>
                        <p></p>
                        <div class="uploads">
                            <input type="file" id="upload_file" name="file" value="修改圖檔" accept="image/gif, image/jpeg, image/png" />
                        </div>
                        <p></p>
                        <button type="submit" id="upload_button" class="btn btn-primary btn-lg">上傳</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/projectJS/editMenu.js"></script>
}

