                            contentType: false,
                            success: function (datas) {
                                if (datas.ErrMsg) {
                                    alert(datas.ErrMsg);
                                    return;
                                }
                                alert(datas.ResultMsg);
                                window.location.href = '@Url.Content("~/Home/Index")';
                            },
                            error: function (err) {
