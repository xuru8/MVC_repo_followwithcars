                            },
                            error: function (err) {
                                alert(err.responseText + ',' + err.status);
                            }
                        });
                    }

                } else {
                    Swal.fire({
                        icon: 'error',
                        title: '請檢查密碼',
                        text: '密碼/確認密碼需一致!'
                    })
                }

            }
        }


