        document.getElementById("UserPhone").addEventListener('click', onclickoriginal);
        document.getElementById("UserEmail").addEventListener('click', onclickoriginal);
        document.getElementById("UserPwd").addEventListener('click', onclickoriginal);
        document.getElementById("UserPwdck").addEventListener('click', onclickoriginal);
